{
  "manifest_version": 2,
  "name": "Reprompt-It",
  "version": "0.5.0",
  "description": "Right-click selected text to rephrase it as elaborative, Concise, or Professional using GPT-4/5 or Gemini 2.x.",
  
  "applications": {
    "gecko": {
      "id": "reprompt-it@firefox.extension",
      "strict_min_version": "109.0"
    }
  },
  
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "notifications",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_page": "options.html",

  "commands": {
    "_execute_browser_action": {
      "suggested_key": { "default": "Ctrl+Shift+R" },
      "description": "Open extension popup"
    },
    "toggle_provider": {
      "suggested_key": { "default": "Ctrl+M" },
      "description": "Toggle provider (OpenAI â†” Gemini)"
    }
  },
  
  "browser_action": {
    "default_title": "Reprompt-It",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "128": "icon128.png"
    }
  },

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
